{
  "name": "br-radio-web",
  "version": "1.0.0",
  "description": "BR Radio Web Frontend",
  "author": "Christoph Wolff",
  "private": true,
  "scripts": {
    "generate": "graphql-codegen init",
    "dev": "nuxt",
    "build": "nuxt build",
    "build:types": "apollo codegen:generate __generated__ --addTypename --mergeInFieldsFromFragmentSpreads --target typescript --localSchemaFile \"./schema.json\" --includes='./graphql/**/*.graphql'",
    "build:types:fragmentmatcher": "graphql-codegen --config codegen.yml",
    "schema:download": "apollo schema:download",
    "start": "nuxt start",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore ."
  },
  "lint-staged": {
    "*.{js,vue}": "npm run lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@nuxt/types": "^0.7.5",
    "@nuxtjs/apollo": "^4.0.0-rc19",
    "@nuxtjs/pwa": "^3.0.0-0",
    "graphql-tag": "^2.10.3",
    "nuxt": "^2.0.0",
    "nuxt-property-decorator": "^2.7.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.13.5",
    "@graphql-codegen/fragment-matcher": "1.13.5",
    "@graphql-codegen/introspection": "1.13.5",
    "@graphql-codegen/typescript": "^1.13.5",
    "@graphql-codegen/typescript-document-nodes": "1.13.5",
    "@graphql-codegen/typescript-graphql-files-modules": "1.13.5",
    "@graphql-codegen/typescript-operations": "1.13.5",
    "@nuxt/typescript-build": "^0.6.0",
    "@nuxtjs/eslint-config-typescript": "^1.0.0",
    "@nuxtjs/eslint-module": "^1.0.0",
    "@nuxtjs/tailwindcss": "^1.0.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-nuxt": ">=0.4.2",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.0.0",
    "lint-staged": "^10.0.0",
    "prettier": "^1.19.1"
  }
}